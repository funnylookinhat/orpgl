<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE glge SYSTEM "glge.dtd">
<glge>

		<mesh id="groundMesh">
			<positions>1000.000,1000.000,0.000,-1000.000,1000.000,0.000,-1000.000,-1000.000,0.000,1000.000,1000.000,0.000,-1000.000,-1000.000,0.000,1000.000,-1000.000,0.000</positions>
			<normals>-0.000,0.000,1000.000,-0.000,0.000,1000.000,-0.000,0.000,1000.000,0.000,-0.000,1000.000,0.000,-0.000,1000.000,0.000,-0.000,1000.000</normals>;
			<uv1>0.000,0.000,1000.000,0.000,1000.000,1000.000,0.000,0.000,1000.000,1000.000,0.000,1000.000</uv1>
			<faces>0,1,2,3,4,5,</faces>
		</mesh>


		<material id="water" specular="0.5" shininess="1.5" color="#002222">
			
			<texture id="waterheight" src="waterheight.jpg" />
			<material_layer texture="#waterheight" mapinput="UV1" frame_rate="25" height="0.1" animation="#flow" mapto="M_HEIGHT" scale_x="0.08" scale_y="0.08" />
			
			<texture id="waternormal" src="waternormal.jpg" />
			<material_layer texture="#waternormal" mapinput="UV1" mapto="M_NOR" scale_x="0.05" scale_y="0.05" />
					
			
		</material>
		
		<mesh id="xline">
			<positions>
			-10000.0,0,0,
			10000.0,0,0
			</positions>
		</mesh>
		<mesh id="yline">
			<positions>
			0,-10000,0,
			0,10000,0
			</positions>
		</mesh>
		<mesh id="zline">
			<positions>
			0,0,-10000,
			0,0,10000
			</positions>
		</mesh>
		
		<material id="red" specular="0" color="#f00" emit="1" />
		<material id="green" specular="0" color="#0f0" emit="1" />
		<material id="blue" specular="0" color="#00f" emit="1" />
		<material id="black" specular="0" color="#000" alpha="0.3" emit="1" />
		
		
		<animation_vector id="flow" frames="1000">
			<animation_curve channel="OffsetY">
				<linear_point x="0.0" y="-1" />
				<linear_point x="1000.0" y="1.0" />
			</animation_curve>
		</animation_vector>
</glge>
